<div class="form-row">
    <%= f.hidden_field :user_id, value:current_user.id %>
    <div class="form-group col-md-6">
        <label>Tipo de propiedad</label>
        <%= f.select :property_type, options_for_select(Property.property_types.keys),{}, class: 'custom-select'%>
    </div>
    <div class="form-group col-md-6">
        <label>Tipo de negocio</label>
        <%= f.select :business_type, options_for_select(Property.business_types.keys),{}, class: 'custom-select'%>
    </div>
</div>
<div class="form-row">
    <div class="form-group col-md-1">
        <label >Unidad</label>
        <%= f.select :price_type, options_for_select(Property.price_types.keys),{}, class: 'custom-select'%>
    </div>
    <div class="form-group col-md-5">
        <label >Precio</label>
        <%= f.number_field :price, class: 'form-control'%>
    </div>
    <div class="form-group col-md-6">
        <label>Comuna</label>
        <%= f.select :commune_id, options_from_collection_for_select(@communes, :id, :name),{}, class: 'custom-select'%>
    </div>
</div>
<div class="form-group">
    <label >Dirección</label>
    <%= f.text_field :address, class: 'form-control'%>
</div>
<div class="form-row">
    <div class="form-group col-md-2">
        <label>Area</label>
        <%= f.number_field :area, class: 'form-control'%>
    </div>
    <div class="form-group col-md-2">
        <label>Habitaciones</label>
        <%= f.number_field :room_quantity, class: 'form-control'%>
    </div>
    <div class="form-group col-md-2">
        <label>Baños</label>
        <%= f.number_field :bath_quantity, class: 'form-control'%>
    </div>
    <div class="form-group col-md-3">
        <label>Fotos de portada <small>(Solo una imagen)</small></label>
        <%= f.file_field :main_image, class: 'form-control-file'%>
    </div>
    <div class="form-group col-md-3">
        <label>Fotos de la propiedad</label>
        <%= f.file_field :prop_images,multiple: true, class: 'form-control-file'%>
    </div>
</div>